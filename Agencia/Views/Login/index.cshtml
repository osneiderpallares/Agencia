
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container login-form">
    <h2 class="login-title">Iniciar sesión</h2>
    <div class="panel panel-default">
        <div class="panel-body">
            <form action="@Url.Action("Login","Login")" method="post">                
                <div class="input-group login-userinput">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                    <input id="txtUser" type="text" class="form-control" name="email" placeholder="Nombre de Usuario">
                </div>
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                    <input id="txtPassword" type="password" class="form-control" name="clave" placeholder="Contraseña">
                    <span id="showPassword" class="input-group-btn">
                        <button class="btn btn-default reveal" type="button"><i class="glyphicon glyphicon-eye-open"></i></button>
                    </span>
                </div>
                <button class="btn btn-primary btn-block login-button" type="submit"><i class="fa fa-sign-in"></i> Login</button>
                <div class="checkbox login-options">
                    <label><input type="checkbox" /> Remember Me</label>
                    <a href="#" class="login-forgot">Forgot Username/Password?</a>
                </div>
            </form>
        </div>
    </div>
</div>

